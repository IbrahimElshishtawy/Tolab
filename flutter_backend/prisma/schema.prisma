generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  DOCTOR
  ASSISTANT
  STUDENT
}

enum AcademicStatus {
  ACTIVE
  SUSPENDED
}

model User {
  id Int @id @default(autoincrement())

  // ✅ Student login
  nationalId String?
  seatNumber String? // رقم الجلوس

  // ✅ Staff login (Doctor/Assistant)
  email String? // university email

  // ✅ Admin login
  username String?

  // common
  role         Role
  isActive     Boolean @default(true)
  passwordHash String? // للـ staff/admin (والطالب لو حبيت لاحقًا)

  // relations
  student Student?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ✅ قيود فريدة حسب نوع الدخول (nullable unique مسموح)
  @@unique([nationalId, seatNumber])
  @@unique([email])
  @@unique([username])
  @@index([role])
}

model Student {
  id     Int @id @default(autoincrement())
  userId Int @unique

  academicStatus AcademicStatus @default(ACTIVE)
  level          Int
  department     String

  user         User          @relation(fields: [userId], references: [id])
  enrollments  Enrollment[]
  groupMembers GroupMember[]
}

model Course {
  id         Int    @id @default(autoincrement())
  code       String @unique
  name       String
  level      Int
  department String

  enrollments Enrollment[]
  schedule    ScheduleSlot[]
  groups      Group[]
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  studentId Int
  courseId  Int
  createdAt DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id])
  course  Course  @relation(fields: [courseId], references: [id])

  @@unique([studentId, courseId])
  @@index([studentId])
  @@index([courseId])
}

model ScheduleSlot {
  id       Int @id @default(autoincrement())
  courseId Int

  dayOfWeek Int // 1=Mon .. 7=Sun
  startMin  Int // 9:30 => 570
  endMin    Int

  course Course @relation(fields: [courseId], references: [id])

  @@index([courseId])
}

model Group {
  id       Int    @id @default(autoincrement())
  courseId Int
  name     String
  capacity Int    @default(30)

  course  Course        @relation(fields: [courseId], references: [id])
  members GroupMember[]

  @@index([courseId])
}

model GroupMember {
  id        Int @id @default(autoincrement())
  groupId   Int
  studentId Int

  group   Group   @relation(fields: [groupId], references: [id])
  student Student @relation(fields: [studentId], references: [id])

  @@unique([groupId, studentId])
  @@index([studentId])
  @@index([groupId])
}
