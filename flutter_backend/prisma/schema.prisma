generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  DOCTOR
  ASSISTANT
  STUDENT
}

enum AcademicStatus {
  ACTIVE
  SUSPENDED
}

model User {
  id            Int     @id @default(autoincrement())
  nationalId    String
  factoryNumber String
  role          Role
  isActive      Boolean @default(true)
  passwordHash  String?

  student Student?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([nationalId, factoryNumber])
}

model Student {
  id             Int            @id @default(autoincrement())
  userId         Int            @unique
  academicStatus AcademicStatus @default(ACTIVE)
  level          Int
  department     String

  user         User          @relation(fields: [userId], references: [id])
  enrollments  Enrollment[]
  groupMembers GroupMember[]
}

model Course {
  id         Int    @id @default(autoincrement())
  code       String @unique
  name       String
  level      Int
  department String

  enrollments Enrollment[]
  schedule    ScheduleSlot[]
  groups      Group[]
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  studentId Int
  courseId  Int
  createdAt DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id])
  course  Course  @relation(fields: [courseId], references: [id])

  @@unique([studentId, courseId])
}

model ScheduleSlot {
  id        Int @id @default(autoincrement())
  courseId  Int
  dayOfWeek Int
  startMin  Int
  endMin    Int

  course Course @relation(fields: [courseId], references: [id])

  @@index([courseId])
}

model Group {
  id       Int    @id @default(autoincrement())
  courseId Int
  name     String
  capacity Int    @default(30)

  course  Course        @relation(fields: [courseId], references: [id])
  members GroupMember[]

  @@index([courseId])
}

model GroupMember {
  id        Int @id @default(autoincrement())
  groupId   Int
  studentId Int

  group   Group   @relation(fields: [groupId], references: [id])
  student Student @relation(fields: [studentId], references: [id])

  @@unique([groupId, studentId])
}
